{
  "settings": {
    "number_of_shards": 3,
    "number_of_replicas": 0,
    "analysis": {
      "analyzer": {
        "ngram_analyzer": {
          "type": "custom",
          "tokenizer": "ngram_tokenizer",
          "filter": ["lowercase"]
        }
      },
      "tokenizer": {
        "ngram_tokenizer": {
          "type": "ngram",
          "min_gram": 1,
          "max_gram": 20,
          "token_chars": ["letter", "digit"]
        }
      }
    }
  },
  "mappings": {
    "dynamic": "strict",
    "properties": {
      "uid": {
        "type": "keyword"
      },
      "phone": {
        "type": "keyword",
        "fields": {
          "ngram": {
            "type": "text",
            "analyzer": "ngram_analyzer",
            "search_analyzer": "standard"
          }
        }
      },
      "email": {
        "type": "keyword",
        "fields": {
          "ngram": {
            "type": "text",
            "analyzer": "ngram_analyzer",
            "search_analyzer": "standard"
          }
        }
      },
      "status": {
        "type": "keyword"
      },
      "deleted": {
        "type": "keyword"
      },
      "version": {
        "type": "long"
      },
      "createdAt": {
        "type": "date",
        "format": "epoch_millis"
      },
      "updatedAt": {
        "type": "date",
        "format": "epoch_millis"
      },
      "canceledAt": {
        "type": "date",
        "format": "epoch_millis"
      }
    }
  }
}
