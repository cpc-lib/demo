<?xml version="1.0"?>
<configuration>

    <property>
        <name>hbase.rootdir</name>
        <value>file:///data/hbase</value>
    </property>

    <property>
        <name>hbase.wal.dir</name>
        <value>file:///wal</value>
    </property>

    <property>
        <name>hbase.cluster.distributed</name>
        <value>false</value>
    </property>

    <property>
        <name>hbase.zookeeper.quorum</name>
        <value>zookeeper</value>
    </property>

    <property>
        <name>hbase.zookeeper.property.clientPort</name>
        <value>2181</value>
    </property>

    <property>
        <name>zookeeper.znode.parent</name>
        <value>/hbase</value>
    </property>


    <!--
    HBase 默认使用 AsyncFSWALProvider，如果遇到问题，可以尝试切换到 filesystem WAL provider，它在某些情况下更稳定。
    -->
    <property>
        <name>hbase.wal.provider</name>
        <value>filesystem</value>
    </property>

</configuration>
